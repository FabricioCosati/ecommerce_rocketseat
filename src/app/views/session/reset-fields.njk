<div class="item">
    <div>Email</div>
    <div class="input">
        <input type="email" name="email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')" placeholder="Seu email">
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input type="password" name="password" placeholder="Sua nova senha">
    </div>
</div>

<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input type="password" name="passwordRepeat" placeholder="Confirme sua senha">
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">