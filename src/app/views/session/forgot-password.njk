{% extends 'layout.njk' %}
{% import 'parts/card.njk' as cards%}

{% block content %}

    {% call cards.render("Recuperar Senha", "forgot-password container") %}

        <form action="/users/forgotPassword" method="post">

            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input type="email" name="email" value="{{user.email}}" onblur="Validate.apply(this, 'isEmail')">
                    </div>
                </div>
            </div>

            <button class="button">Enviar Email</button>

        </form>

    {% endcall %}

{% endblock content %}


